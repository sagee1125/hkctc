{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3",
      "excludeFiles": "node_modules/**|.git/**|tests/**"
    }
  }
}
